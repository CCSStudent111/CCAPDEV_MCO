<div class="content">
    <h2>Edit Post</h2>
    <form action="/post/update/{{post._id}}" method="post">
        <div class="form-group">
            <label for="posttitle">Title:</label>
            <input type="text" id="posttitle" name="title" value="{{post.title}}" required>
        </div>
        
        <div class="form-group">
            <label for="postcontent">Content:</label>
            <textarea id="postcontent" name="content" required>{{post.content}}</textarea>
        </div>
        
        <div class="form-group">
            <label for="posttags">Tags:</label>
            <input type="text" id="posttags" name="tags" value="{{#each post.tags}}{{this}}{{#unless @last}} {{/unless}}{{/each}}">
            <small>Separate tags with # (Example: #drama #study #help)</small>
        </div>
        
        <div class="buttons">
            <button type="submit" class="savepost">Save Changes</button>
            <a href="/post/{{post._id}}" class="cancel">Cancel</a>
        </div>
    </form>
</div>