
{{!< layout "loginLayout" }}
<link rel="stylesheet" href="..\css\logstyles.css">
<div id="register" class="register">
    <div class="contentpane">
        <h2> Register </h2>
        <form action="/register" method="post">
            <input class="input-details" type="text" name="username" placeholder="Enter username" required>
            <input class="input-details" type="text" name="email" placeholder="Enter email" required>
            <input class="input-details" type="password" name="password" placeholder="Enter password" required>
            <input class="input-details" type="password" name="password" placeholder="Verify password" required>
                <div class="rememberme">
                    <input class="input-rememberme" type="checkbox" name="rememberme">
                    <label for="rememberme">Remember me</label>                   
                </div>
                <div class="login">
                    <a href="/login">Already have an account? Log in now</a> 
                </div>
                <button type="submit" class = "button">Register</button>
        </form>
    </div>
</div>